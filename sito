    <!-- JavaScript -->
    <script>
        // Menu hamburger per mobile
        document.addEventListener('DOMContentLoaded', function() {
            const hamburger = document.getElementById('hamburger');
            const navMenu = document.getElementById('nav-menu');
            
            hamburger.addEventListener('click', function() {
                navMenu.classList.toggle('active');
            });
            
            // Chiudi il menu quando si clicca su un link
            const navLinks = document.querySelectorAll('nav a');
            navLinks.forEach(link => {
                link.addEventListener('click', function() {
                    navMenu.classList.remove('active');
                });
            });
            
            // Validazione form preventivo
            const preventivoForm = document.getElementById('preventivo-form');
            
            preventivoForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                let isValid = true;
                
                // Validazione nome
                const nome = document.getElementById('nome');
                const nomeError = document.getElementById('nome-error');
                if (nome.value.trim() === '') {
                    nomeError.style.display = 'block';
                    isValid = false;
                } else {
                    nomeError.style.display = 'none';
                }
                
                // Validazione telefono
                const telefono = document.getElementById('telefono');
                const telefonoError = document.getElementById('telefono-error');
                if (telefono.value.trim() === '') {
                    telefonoError.style.display = 'block';
                    isValid = false;
                } else {
                    telefonoError.style.display = 'none';
                }
                
                // Validazione privacy
                const privacy = document.getElementById('privacy');
                const privacyError = document.getElementById('privacy-error');
                if (!privacy.checked) {
                    privacyError.style.display = 'block';
                    isValid = false;
                } else {
                    privacyError.style.display = 'none';
                }
                
                if (isValid) {
                    // Simulazione invio form
                    alert('Grazie per la tua richiesta! Ti contatteremo al più presto.');
                    preventivoForm.reset();
                }
            });
            
            // Evidenziazione link di navigazione attivo durante lo scroll
            window.addEventListener('scroll', function() {
                const sections = document.querySelectorAll('section');
                const navLinks = document.querySelectorAll('nav a');
                
                let current = '';
                
                sections.forEach(section => {
                    const sectionTop = section.offsetTop;
                    const sectionHeight = section.clientHeight;
                    
                    if (pageYOffset >= sectionTop - 100) {
                        current = section.getAttribute('id');
                    }
                });
                
                navLinks.forEach(link => {
                    link.classList.remove('active');
                    if (link.getAttribute('href') === '#' + current) {
                        link.classList.add('active');
                    }
                });
            });
        });
    </script>
</body>
</html>
